            ]
            segunda_coluna = [
                telebot.types.InlineKeyboardButton(text="ğŸ¥• Doar Cenouras", callback_data=f'doar_cenoura_{id_usuario}_{original_message_id}')
            ]
            keyboard.row(*primeira_coluna)
